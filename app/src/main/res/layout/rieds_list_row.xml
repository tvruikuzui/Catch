<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginEnd="9dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ridesListRow_image_imgv"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/car_avatar" />

            <TextView
                android:id="@+id/ridesListRow_Date_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:fontFamily="sans-serif"
                android:text="Date: "
                android:textColor="#000000"
                android:textSize="21sp"
                android:textStyle="bold|italic"
                app:layout_constraintStart_toEndOf="@+id/ridesListRow_image_imgv"
                app:layout_constraintTop_toTopOf="@+id/ridesListRow_image_imgv" />

            <TextView
                android:id="@+id/ridesListRow_Time_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif"
                android:text="Time: "
                android:textColor="#000000"
                android:textSize="21sp"
                android:textStyle="bold|italic"
                app:layout_constraintStart_toEndOf="@+id/ridesListRow_image_imgv"
                app:layout_constraintTop_toBottomOf="@+id/ridesListRow_Date_textView" />

            <TextView
                android:id="@+id/ridesListRow_Time_textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:fontFamily="sans-serif"
                android:text="Available seats:"
                android:textColor="#000000"
                android:textSize="21sp"
                android:textStyle="bold|italic"
                app:layout_constraintStart_toEndOf="@+id/ridesListRow_image_imgv"
                app:layout_constraintTop_toBottomOf="@+id/ridesListRow_Time_textView" />

            <TextView
                android:id="@+id/ridesListRow_name_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="sans-serif"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/ridesListRow_Name_textView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ridesListRow_Name_textView"
                app:layout_constraintTop_toTopOf="@+id/ridesListRow_Name_textView" />

            <TextView
                android:id="@+id/ridesListRow_time_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="sans-serif"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/ridesListRow_Time_textView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ridesListRow_Time_textView"
                app:layout_constraintTop_toTopOf="@+id/ridesListRow_Time_textView" />

            <TextView
                android:id="@+id/ridesListRow_numOfSits_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="sans-serif"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/ridesListRow_Time_textView2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ridesListRow_Time_textView2"
                app:layout_constraintTop_toTopOf="@+id/ridesListRow_Time_textView2" />

            <TextView
                android:id="@+id/ridesListRow_discription_tv"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="sans-serif"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/ridesListRow_Address_textView"
                app:layout_constraintTop_toBottomOf="@+id/ridesListRow_Address_textView" />

            <TextView
                android:id="@+id/ridesListRow_date_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="sans-serif"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/ridesListRow_Date_textView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ridesListRow_Date_textView"
                app:layout_constraintTop_toTopOf="@+id/ridesListRow_Date_textView" />

            <TextView
                android:id="@+id/ridesListRow_Name_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif"
                android:text="Driver Name:"
                android:textColor="#000000"
                android:textSize="21sp"
                android:textStyle="bold|italic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ridesListRow_image_imgv" />

            <TextView
                android:id="@+id/ridesListRow_Address_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif"
                android:text="Ride Description:"
                android:textColor="#000000"
                android:textSize="21sp"
                android:textStyle="bold|italic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ridesListRow_Name_textView" />

            <Button
                android:id="@+id/ridesListRow_cancel_btn"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:text="DELETE"
                app:backgroundTint="#FF0000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/ridesListRow_discription_tv"
                app:layout_constraintTop_toBottomOf="@+id/ridesListRow_discription_tv" />

            <ImageView
                android:id="@+id/ridesListRow_edit_imgV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/ic_edit" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>